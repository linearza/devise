<!DOCTYPE html>
<html>
<head>
  <title>Devise</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
  <p>Welcome - <%= link_to 'Log out', destroy_user_session_path, method: :delete %></p>
<% else %>
  <p>Welcome - <%= link_to 'Log in', new_user_session_path %></p>
<% end %>

<%= yield %>

<% if notice %>
  <p class="notice"><%= notice %></p>
<% elsif alert %>
  <p class="alert"><%= alert %></p>
<% end %>

</body>
</html>
